@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}


<partial name="_StatusMessage" for="StatusMessage" />

    <div class="flex items-center justify-center min-h-screen">
        <form id="change-password-form" method="post" class=" bg-base-300 p-8 shadow-lg rounded-lg space-y-4 relative" style="width:40%;">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <h2 class="flex text-2xl font-bold items-center mb-3">Change Password</h2>
                    <div class="relative mb-2">
                        <label asp-for="Input.OldPassword" class="block text-sm font-bold mb-2">Old Password</label>
                        <input asp-for="Input.OldPassword" autocomplete="current-password" aria-required="true" placeholder="Enter your old password"
                               class="input input-bordered w-full" />
                        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                    </div>
                    <div class="relative mb-2">
                        <label asp-for="Input.NewPassword" class="block text-sm font-bold mb-2">New Password</label>
                        <input asp-for="Input.NewPassword" autocomplete="new-password" aria-required="true" placeholder="Enter your new password"
                               class="input input-bordered w-full" />
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>
                    <div class="relative mb-6">
                        <label asp-for="Input.ConfirmPassword" class="block text-sm font-bold mb-2">Confirm Password</label>
                        <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" placeholder="Enter confirm your new password"
                               class="input input-bordered w-full" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="mb-6 relative">
                        <button type="submit" class="btn btn-error w-full">Update password</button>
                    </div>




        </form>


    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
