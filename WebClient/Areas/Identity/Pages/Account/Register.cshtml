@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="flex items-center justify-center min-h-screen">
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="w-full h-fit max-w-4xl bg-base-300 p-8 shadow-lg rounded-lg">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="flex">
                <div class="w-full mr-8">
                    <h2 class="flex text-2xl font-bold items-center mb-3">Create New Account</h2>

                <div class="relative mb-2">
                            <label asp-for="Input.Email" class="block text-sm font-bold mb-2">Email Address</label>
                            <input asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="Enter your email address"
                                   class="input input-bordered w-full" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>

                </div>

                <div class="relative mb-2">
                            <label asp-for="Input.FullName" class="block text-sm font-bold mb-2">Full Name</label>
                            <input asp-for="Input.FullName" autocomplete="username" aria-required="true" placeholder="Enter your full name"
                                   class="input input-bordered w-full" />
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>

                </div>
                <div class="flex w-full space-x-4 mb-2">
                    <div class="relative w-1/2 mr-2">
                        <label asp-for="Input.DOB" class="block text-sm font-bold mb-2">Date of Birth</label>
                        <input asp-for="Input.DOB" autocomplete="username" aria-required="true" placeholder="Enter your date of birth" type="date"
                               class="input input-bordered w-full" />
                        <span asp-validation-for="Input.DOB" class="text-danger"></span>
                    </div>
                    <div class="relative w-1/2">
                        <label asp-for="Input.Role" class="block text-sm font-bold mb-2">Role</label>
                        <select asp-for="Input.Role" autocomplete="username" aria-required="true" placeholder="Select your role"
                                class="input input-bordered w-full">
                            <option value="Student">Student</option>
                            <option value="Pending">Teacher</option>
                        </select>
                    </div>
                </div>
                    
                    <div class="relative mb-2">
                        <label asp-for="Input.Password" class="block text-sm font-bold mb-2">Password</label>
                        <input asp-for="Input.Password" autocomplete="new-password" aria-required="true" placeholder="Enter your password"
                               class="input input-bordered w-full" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="relative mb-6">
                        <label asp-for="Input.ConfirmPassword" class="block text-sm font-bold mb-2">Confirm Password</label>
                        <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" placeholder="Enter again your password"
                               class="input input-bordered w-full" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="mb-6 mt-2 relative">
                        <button type="submit" id="registerSubmit" class="btn btn-error w-full">Register</button>
                    </div>
                    <p class="text-center text-gray-500 text-xs">
                        You have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="underline">Login</a>.
                    </p>
                </div>
                <div class="hidden w-1/2 md:block items-center justify-center">
                    <div class="flex items-center justify-center h-full">
                        <img src="~/css/registration-01.png" alt="Description of your image">
                    </div>
                </div>
            </div>


        </form>


    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
