<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserQuestion[0].Province)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserQuestion[0].AuthorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserQuestion[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserQuestion[0].Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserQuestion[0].Published)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserQuestion[0].LastUpdated)
